<h1> New Course </n1>

<%= form_with model: @course, local: true do |form| %>
    <% if @course.errors.any? %>
        <ul>
            <% @course.errors.full_message.each do |messsage| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>

    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
    </div>

    <div>
        <%= form.label :code %><br>
        <%= form.text_field :code %>
    </div>

    <div>
        <%= form.submit "Created New Course" %>
    </div>
<% end %>

<%= link_to "Back to course list", courses_path %>