<%= form_with model: @student, local: true do |form| %>
    <% if @student.errors.any? %>
        <ul>
            <% @student.errors.full_messages.each do |message| %>
            <li> <%= message %> </li>
            <% end %>
        </ul>
    <% end %>
    
    <div>
        <%= form.label :name %> <br>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :email %> <br>
        <%= form.text_field :email %>
    </div>
    <div>
    <%= form.submit "Create Student" %>
    </div>
<% end %>