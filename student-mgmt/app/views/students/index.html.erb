
<p> <%= render "layouts/flash" %> </p>

<div class="min-h-screen bg-green-700 p-8">
  <div class="max-w-7xl mx-auto bg-white shadow-lg rounded-2xl p-6">

    <h1 class="text-3xl font-bold text-green-800 mb-6">ðŸ“‹ List of Students</h1>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 text-sm text-left">
        <thead class="bg-green-600 text-white">
        <tr>
          <th class="px-4 py-3 font-semibold">First Name</th>
          <th class="px-4 py-3 font-semibold">Last Name</th>
          <th class="px-4 py-3 font-semibold">Email</th>
          <th class="px-4 py-3 font-semibold">Phone</th>
          <th class="px-4 py-3 font-semibold">City</th>
          <th class="px-4 py-3 font-semibold">Date of Birth</th>
          <th class="px-4 py-3 font-semibold text-center" colspan="3">Actions</th>
        </tr>
        </thead>
        <tbody class="divide-y divide-gray-300">
        <% @students.each do |student| %>
          <tr class="hover:bg-gray-100">
            <td class="px-4 py-3"><%= student.first_name %></td>
            <td class="px-4 py-3"><%= student.last_name %></td>
            <td class="px-4 py-3"><%= student.email %></td>
            <td class="px-4 py-3"><%= student.phone %></td>
            <td class="px-4 py-3"><%= student.city %></td>
            <td class="px-4 py-3"><%= student.date_of_birth %></td>
            <td class="px-2 py-2">
              <%= link_to 'View', student, class: "text-blue-600 hover:underline font-medium" %>
            </td>
            <td class="px-2 py-2">
              <%= link_to 'Edit', edit_student_path(student), class: "text-yellow-600 hover:underline font-medium" %>
            </td>
            <td class="px-2 py-2">
              <%#= button_to 'Delete', student_path(student), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:underline font-medium bg-transparent p-0 m-0 border-none", form: { style: 'display:inline' } %>
              <%= link_to 'Delete me', student_path(student), data: {turbo_method: :delete, confirm: 'Are you sure?'}, class: "text-red-600 hover:underline font-medium bg-transparent p-0 m-0 border-none", form: { style: 'display:inline' } %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <div class="mt-6">
      <%= link_to "âž• New Student", new_student_path, class: "inline-block bg-green-700 text-white px-6 py-2 rounded-lg shadow hover:bg-green-800 transition" %>
    </div>
  </div>


  <%= form_with url: search_students_path, method: :get, local: true do %>
    <input type="text" name="q" placeholder="Search..." class="border p-2">
    <%= submit_tag "Search", class: "mt-6 bg-blue-500 text-white px-3 py-1 rounded-lg" %>
  <% end %>

  <%= link_to 'Import Students', import_students_path, method: :post, class: "mt-10 bg-green-600 text-white px-3 py-1 rounded ml-2" %>

</div>


