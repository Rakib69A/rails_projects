<div class="max-w-2xl mx-auto bg-white shadow-lg rounded-xl p-8 mt-12 space-y-6">

  <h1 class="text-3xl font-bold text-green-700 mb-6 border-b pb-2">Student Details</h1>

  <div class="space-y-4 text-gray-800 text-lg">
    <p><strong class="font-semibold text-gray-700">First Name:</strong> <%= @student.first_name %></p>
    <p><strong class="font-semibold text-gray-700">Last Name:</strong> <%= @student.last_name %></p>
    <p><strong class="font-semibold text-gray-700">Email:</strong> <%= @student.email %></p>
    <p><strong class="font-semibold text-gray-700">Phone:</strong> <%= @student.phone %></p>
    <p><strong class="font-semibold text-gray-700">City:</strong> <%= @student.city %></p>
    <p><strong class="font-semibold text-gray-700">Date of Birth:</strong> <%= @student.date_of_birth %></p>
  </div>

  <div class="flex gap-4 pt-6 border-t mt-6">
    <%= link_to 'Edit', edit_student_path(@student), class: "bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-2 px-4 rounded-lg transition" %>
    <%= link_to 'Back', students_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded-lg transition" %>
  </div>
</div>
