<div class="container mt-5">
  <h1 class="mb-4">সকল পোস্ট</h1>

    <div class="list-group">
      <% @posts.each do |post| %>
        <div class="list-group-item list-group-item-action mb-2 shadow-sm">
          <h5><%= link_to post.title, post_path(post), class: "text-decoration-none text-dark" %></h5>
          <p><%= truncate(post.content, length: 100) %></p>
          <div class="mt-2">
            <%= link_to 'দেখুন', post_path(post), class: 'btn btn-sm btn-outline-primary' %>
            <%= link_to 'এডিট করুন', edit_post_path(post), class: 'btn btn-sm btn-outline-secondary' %>
            <%= link_to 'ডিলিট করুন', post_path(post), method: :delete, data: { confirm: 'তুমি কি নিশ্চিত?' }, class: 'btn btn-sm btn-outline-danger' %>
          </div>
        </div>
      <% end %>
    </div>
